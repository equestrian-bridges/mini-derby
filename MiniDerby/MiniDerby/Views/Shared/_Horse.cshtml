@model MiniDerby.Data.Horse

<div class="funny-boxes funny-boxes-left-blue" style="margin: 5px;">
	<div class="row">
		<div class="col-xs-2 funny-boxes-img">
			
			<img class="img-responsive img-circle" style="max-height:200px;" src="@String.Format("https://miniderby.blob.core.windows.net/horse/{0}_headshot.png", Model.Id)" alt="">
		</div>
		<div class="col-xs-10">
			<h2>
				@Model.Name
				<small>@Model.TotalAmountRaised.ToString("C")</small>
			</h2>


		</div>
	</div>
	<div class="row">
		<div class="col-xs-6">
			<h2>
				<small>Presented By</small><br />
				@Model.Sponsor.Name
			</h2>
		</div>
		<div class="col-xs-6">
			@if (Model.Event.EventStartDate.Value > DateTime.Today)
			{
				<form action="https://www.sandbox.paypal.com/cgi-bin/webscr" method="post" target="_top" class="pull-right">
					<input type="hidden" name="custom" id="horseSelect" value="@Model.Id">
					<input type="hidden" name="notify_url" value="http://miniderby.azurewebsites.net/IPN/PayPalPaymentNotification" />
					<input type="hidden" name="return" id="paypalReturnUrl" value="http://miniderby.azurewebsites.net/" />
					<input type="hidden" name="cmd" value="_s-xclick">
					<input type="hidden" name="encrypted" value="-----BEGIN PKCS7----------END PKCS7-----">
					@*<input type="submit" class="btn btn-primary" value="Place a Donation Bet" src="https://www.sandbox.paypal.com/en_US/i/btn/btn_donateCC_LG.gif" border="0" name="submit" alt="PayPal - The safer, easier way to pay online!">*@
					<button type="submit" class="btn btn-primary">
						<i class="icon icon-badge"></i>
						Place a Donation Bet
					</button>
				</form>
			}
		</div>
	</div>
</div>